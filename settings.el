(defun xah-process-image (œÜfile-list œÜargs-str œÜnew-name-suffix œÜnew-name-file-suffix )
  "Wrapper to ImageMagick's ‚Äúconvert‚Äù shell command.
œÜfile-list is a list of image file paths.
œÜargs-str is argument string passed to ImageMagick's ‚Äúconvert‚Äù command.
œÜnew-name-suffix is the string appended to file. e.g. ‚Äú_new‚Äù gets you ‚Äú‚Ä¶_new.jpg‚Äù
œÜnew-name-file-suffix is the new file's file extension. e.g. ‚Äú.png‚Äù

URL `http://ergoemacs.org/emacs/emacs_dired_convert_images.html'
Version 2015-10-19"
  (require 'dired)
  (mapc
   (lambda (Œæf)
     (let ( newName cmdStr )
       (setq newName
             (concat
              (file-name-sans-extension Œæf)
              œÜnew-name-suffix
              œÜnew-name-file-suffix))
       (while (file-exists-p newName)
         (setq newName
               (concat
                (file-name-sans-extension newName)
                œÜnew-name-suffix
                (file-name-extension newName t))))
       ;; relative paths used to get around Windows/Cygwin path remapping problem
       (setq cmdStr
             (format
              "convert %s '%s' '%s'" 
              œÜargs-str 
              (file-relative-name Œæf) 
              (file-relative-name newName)))
       (shell-command cmdStr)))
   œÜfile-list )
  (revert-buffer))

