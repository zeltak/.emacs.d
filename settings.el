(defun xah-cycle-hyphen-underscore-space ()
  "Cycle {underscore, space, hypen} chars of current word or text selection.
When called repeatedly, this command cycles the {‚Äú_‚Äù, ‚Äú-‚Äù, ‚Äú ‚Äù} characters, in that order.

URL `http://ergoemacs.org/emacs/elisp_change_space-hyphen_underscore.html'
Version 2015-08-17"
  (interactive)
  ;; this function sets a property „Äå'state„Äç. Possible values are 0 to length of ŒæcharArray.
  (let (Œæp1 Œæp2)
    (if (use-region-p)
        (progn
          (setq Œæp1 (region-beginning))
          (setq Œæp2 (region-end)))
      (let ((Œæbounds (bounds-of-thing-at-point 'symbol)))
        (progn
          (setq Œæp1 (car Œæbounds))
          (setq Œæp2 (cdr Œæbounds)))))

    (let* ((ŒæinputText (buffer-substring-no-properties Œæp1 Œæp2))
           (ŒæcharArray ["_" "-" " "])
           (Œælength (length ŒæcharArray))
           (ŒæregionWasActive-p (region-active-p))
           (ŒænowState
            (if (equal last-command this-command )
                (get 'xah-cycle-hyphen-underscore-space 'state)
              0 ))
           (ŒæchangeTo (elt ŒæcharArray ŒænowState)))
      (save-excursion
        (save-restriction
          (narrow-to-region Œæp1 Œæp2)
          (goto-char (point-min))
          (while
              (search-forward-regexp
               (concat
                (elt ŒæcharArray (% (+ ŒænowState 1) Œælength))
                "\\|"
                (elt ŒæcharArray (% (+ ŒænowState 2) Œælength)))
               (point-max)
               'NOERROR)
            (replace-match ŒæchangeTo 'FIXEDCASE 'LITERAL))))
      (when (or (string= ŒæchangeTo " ") ŒæregionWasActive-p)
        (goto-char Œæp2)
        (set-mark Œæp1)
        (setq deactivate-mark nil))
      (put 'xah-cycle-hyphen-underscore-space 'state (% (+ ŒænowState 1) Œælength)))))

(defun xah-insert-bracket-pair (œÜleft-bracket œÜright-bracket)
  "Wrap or Insert a matching bracket and place cursor in between.

If there's a text selection, wrap brackets around it. Else, smartly decide wrap or insert. (basically, if there's no char after cursor, just insert bracket pair.)

œÜleft-bracket ÔºÜ œÜright-bracket are strings.

