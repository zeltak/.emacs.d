(echo "$VOL" | gdbar -l "\^i(${ICON})" -fg "$BAR FG" -bg "$BAR BG" -w
"$BAR WIDTH" -s 0 -ss 0 -sw 5 ; sleep "$SECS") > "$PIPE"
 -ss X (X reffer to number if stripes, '0' is none)

