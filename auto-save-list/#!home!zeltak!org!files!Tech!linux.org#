 if bIsMarked ~= 0 then
 -- set an icon to the note
 -- Nc Note Icon SetValues(nDocID, strNoteID, 0)
 Nc Note Icon SetValues(nDocID, strNoteID, 2,
"/home/zeltak/MLT/programs/notecase/level1.png")
 --Nc Note Icon SetValues(nDocID, strNoteID, 1, "help")
 end
 end

